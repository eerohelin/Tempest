<Window x:Class="Tempest.LoadingAssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tempest"
        mc:Ignorable="d"
        Topmost="True"
        Title="LoadingAssetsWindow" Height="200" Width="300">
    <StackPanel>
        <Label HorizontalAlignment="Center">Loading Assets..</Label>
        <ProgressBar x:Name="AssetProgressBar" Minimum="0" Height="30"/>
    </StackPanel>
</Window>
