<Popup x:Class="Tempest.TimestampTagPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tempest"
             mc:Ignorable="d"
             StaysOpen="False"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Hidden" MinWidth="100" Height="100">
        <StackPanel x:Name="tagContainer" Background="White">
            <Button Click="NewTagButton_Click">New</Button>
        </StackPanel>
    </ScrollViewer>
</Popup>
